@{
  Layout = "_Layout";
}

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Enter stylist description<h1>
      <form action="/stylist/Create" method="post">
        <label for="stylist">Stylist:</label>
        <input type="hidden" name="stylist-id" value="@Model.GetId()">
        <input type="text" name="name" id="name">
        <input type="text" name="specialty" id="specialty">
        <input type="text" name="client-list" id="client-list">
        <button type="button" class="btn btn-primary">Input stylist</button>
      </form>
    </div>

    <div class="col-md-6">
      <h1>Update stylist description<h1>
      <form action="/stylist/Update" method="post">
        <label for="stylist">Stylist:</label>
        <input type="hidden" name="stylist-id" value="@Model.GetId()">
        <input type="text" name="name" id="name">
        <input type="text" name="specialty" id="specialty">
        <input type="hidden" name="client-list" id="@Model.GetClient()">
        <button type="button" class="btn btn-primary">Input stylist</button>
      </form>
    </div>

      <a href="/index/@Model.GetId()"><button type="button" class="btn btn-warning"> Return to home directory</button></a>

  </div>
</div>
