@{
  Layout = "_Layout";
}

<div class="container container-fluid">
  <div class="row">
    <div class="col-md-12">
      @if (Model.Count == 0)
      {
        <h3>You have an empty directory because there are no stylists listed.  No stylists mean no customers, no customers mean unhappy salon.  Go get some stylists! (Click on the button below to add)</h3>
      }

      <h2>Stylists</h2>
      <ul>
        @foreach (var stylist in Model)
        {
          <a href="/stylist/@stylist.GetId()"><li>@stylist.GetName()</li></a>
        }
      </ul>

      <a href="/stylist"><button type="button" class="btn btn-success">Add your stylist</button></a>
      <a href="/Stylist/DeleteAll"><button type="button" class="btn btn-danger">Delete your list of current stylists</button></a>
    </div>
  </div>
</div>
