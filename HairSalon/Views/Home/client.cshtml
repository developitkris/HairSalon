@{
  Layout = "_Layout";
}

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Enter customer details<h1>
      <form action="/client/Create" method="post">
        <label for="client">Customer:</label>
        <input type="text" name="name" id="name">
        <input type="text" name="phone" id="phone">
        <input type="text" name="specialty" id="specialty">
        <input type="hidden" name="stylist-id" value="@Model.GetId()">
        <button type="submit" class="btn btn-primary">Input customer</button>
      </form>
    </div>

    <div class="col-md-6">
      <h1>Update customer details<h1>
      <form action="/client/Update" method="post">
        <label for="client">Customer:</label>
        <input type="text" name="name" id="name">
        <input type="text" name="phone" id="phone">
        <input type="text" name="specialty" id="specialty">
        <input type="hidden" name="stylist-id" value="@Model.GetId()">
        <button type="submit" class="btn btn-primary">Update customer</button>
      </form>
    </div>


      <a href="/index/@Model.GetId()"><button type="button" class="btn btn-warning">Return to home directory</button></a>
  </div>
</div>
